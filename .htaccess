RewriteRule ^bingo/server/update-dollar-rate$ admin/includes/update-rate.php [NC,L]
RewriteRule ^bingo/server/add-account-details$ admin/includes/add-admin-account-details.php [NC,L]
RewriteRule ^bingo/server/delete-account-details$ admin/includes/delete-admin-account-details.php [NC,L]
RewriteRule ^bingo/server/set-trusted-account$ admin/includes/update-admin-trusted-account.php [NC,L]
RewriteRule ^bingo/server/search-list$ admin/includes/search-transactions-list.php [NC,L]
RewriteRule ^bingo/server/update-transaction-status$ admin/includes/update-transaction-status.php [NC,L]
RewriteRule ^bingo/server/transaction-payment-proof$ admin/includes/get-transaction-payment-proof.php [NC,L]
RewriteRule ^bingo/server/compare-hash$ admin/includes/compare-hash.php [NC,L]
RewriteRule ^bingo/server/verify-user$ admin/includes/verify-user.php [NC,L]
RewriteRule ^bingo/server/user-verification-image$ admin/includes/get-user-verification-image.php [NC,L]
RewriteRule ^bingo/server/general-notice$ admin/includes/general-notice.php [NC,L]
RewriteRule ^bingo/server/users-notice$ admin/includes/users-notice.php [NC,L]
RewriteRule ^bingo/server/visitors-notice$ admin/includes/visitors-notice.php [NC,L]